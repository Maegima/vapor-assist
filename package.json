{
    "name": "vapor-assist",
    "displayName": "Vapor Assist",
    "publisher": "maegima",
    "description": "Vapor Assist adds an AI-powered chat panel to help you write, refactor, and understand code directly inside VS Code.",
    "icon": "resources/icon.png",
    "version": "0.0.2",
    "engines": {
        "vscode": "^1.98.0"
    },
    "categories": [
        "Other"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "chatSidebar",
                    "title": "Vapor Assist",
                    "icon": "resources/chat.png"
                }
            ]
        },
        "views": {
            "chatSidebar": [
                {
                    "id": "chatView",
                    "name": "Assist Panel",
                    "type": "webview",
                    "icon": "resources/chat.png"
                }
            ]
        },
        "commands": [
            {
                "command": "vaporAssist.openPanel",
                "title": "Vapor Assist: Open Chat Panel"
            },
            {
                "command": "vaporAssist.addSelectedCode",
                "title": "Vapor Assist: Add Selected Code as Snippet"
            },
            {
                "command": "vaporAssist.clearHistory",
                "title": "Vapor: Clear Chat History"
            }
        ],
        "keybindings": [
            {
                "command": "vaporAssist.addSelectedCode",
                "key": "ctrl+l",
                "when": "editorTextFocus"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./ && npm run copy-assets",
        "watch": "tsc -watch -p ./",
        "copy-media": "cp -r ./src/media/* ./dist/media/",
        "copy-highlight": "cp ./node_modules/@highlightjs/cdn-assets/highlight.min.js ./dist/media/highlight.min.js && cp ./node_modules/@highlightjs/cdn-assets/styles/github-dark.min.css ./dist/media/highlight.min.css",
        "copy-assets": "mkdir -p ./dist/media && npm run copy-media && npm run copy-highlight"
    },
    "devDependencies": {
        "@types/js-yaml": "^4.1.1",
        "@types/node": "^24.10.1",
        "@types/vscode": "^1.98.0",
        "typescript": "^5.0.0"
    },
    "dependencies": {
        "@highlightjs/cdn-assets": "^11.11.1",
        "js-yaml": "^4.1.1"
    }
}